<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".room.RoomActivity">

    <Button
            android:id="@+id/activity_room_query"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="添加"/>

    <Button
            android:id="@+id/activity_room_insert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="插入"
            app:layout_constraintTop_toBottomOf="@id/activity_room_query"/>

    <Button
            android:text="修改"
            android:id="@+id/activity_room_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/activity_room_insert"/>

    <Button
            android:text="删除"
            android:id="@+id/activity_room_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/activity_room_update"/>

    <TextView
            app:layout_constraintTop_toBottomOf="@id/activity_room_delete"
            android:id="@+id/activity_room_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>