<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <data>

        <variable
                name="bindingAnimalEntity"
                type="demo.jetpack.com.binding.list.BindingAnimalEntity"/>

    </data>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/item_layout_on_tv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@{bindingAnimalEntity.name}"/>

        <TextView
                android:gravity="center"
                android:id="@+id/item_layout_on_tv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{bindingAnimalEntity.food}"/>
    </LinearLayout>
</layout>
