<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".global.GlobalTestActivity">

    <Button
            android:id="@+id/activity_global_test_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Click me"/>

    <TextView
            android:id="@+id/activity_global_test_tv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="show1"
            app:layout_constraintTop_toBottomOf="@id/activity_global_test_btn"/>

    <TextView
            android:id="@+id/activity_global_test_tv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="show2"
            app:layout_constraintTop_toBottomOf="@id/activity_global_test_tv1"/>
</android.support.constraint.ConstraintLayout>